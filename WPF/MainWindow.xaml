<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="ChatBot" Height="600" Width="1000">
    <Grid>
        <TabControl Height="580" VerticalAlignment="Center" HorizontalAlignment="Center" Width="990" Margin="0">
            <TabItem Header="Create Questions">
                <Grid Background="#FFE5E5E5" Height="712">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="77*"/>
                        <ColumnDefinition Width="295*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Choose the type of question" HorizontalAlignment="Left" Height="28" Margin="24,107,0,0" VerticalAlignment="Top" Width="160" Grid.ColumnSpan="2"/>
                    <Label Content="Write a question" HorizontalAlignment="Left" Height="29" Margin="24,61,0,0" VerticalAlignment="Top" Width="146" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="TextBoxQuestion" HorizontalAlignment="Left" Height="29" Margin="49,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="512" Grid.Column="1"/>
                    <ComboBox x:Name="ComboBoxQuestion" HorizontalAlignment="Left" Height="28" Margin="49,106,0,0" VerticalAlignment="Top" Width="315" IsSynchronizedWithCurrentItem="False" SelectionChanged="ComboBoxQuestion_SelectionChanged" Grid.Column="1">
                        <TabItem Header="Yes/No"/>
                        <TabItem Header="Open question"/>
                        <TabItem Header="Choose one answer from several"/>
                        <TabItem Header="Select multiple answers from multiple "/>
                        <TabItem Header="Sorting"/>
                    </ComboBox>
                    <Button Content="Add a question to a test" HorizontalAlignment="Left" Height="28" Margin="405,106,0,0" VerticalAlignment="Top" Width="156" Grid.Column="1"/>
                    <StackPanel x:Name="StackPanelYesNo" HorizontalAlignment="Left" Height="131" Margin="49,150,0,0" VerticalAlignment="Top" Width="315" Visibility="Hidden" Grid.Column="1">
                        <RadioButton x:Name="RadioButtonYes" Content="Yes" Height="22" Width="142" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        <RadioButton x:Name="RadioButtonNo" Content="No" Height="21" Width="142"/>
                    </StackPanel>
                    <StackPanel x:Name="StackPanelWriteAQuestion" HorizontalAlignment="Left" Height="60" Margin="49,150,0,0" VerticalAlignment="Top" Width="360" Visibility="Hidden" Grid.Column="1">
                        <TextBox Height="29" TextWrapping="Wrap" Width="361"/>
                    </StackPanel>
                    <StackPanel x:Name="StackPanelChooseOneAnswerFromSeveral" HorizontalAlignment="Left" Height="174" Margin="49,150,0,0" VerticalAlignment="Top" Width="315" Visibility="Hidden" Grid.Column="1">
                        <Button x:Name="ButtonAddAnAswerOption" Content="Add an answer option" Height="29" Width="142"/>
                    </StackPanel>
                    <StackPanel x:Name="StackPanelSelectMultipleAnswersFromMultiple" HorizontalAlignment="Left" Height="170" Margin="49,150,0,0" VerticalAlignment="Top" Width="315" Visibility="Hidden" Grid.Column="1">
                        <Button x:Name="ButtonAddAnAswerOptionForSorting" Content="Add an answer option" Height="29" Width="260"/>
                    </StackPanel>
                    <StackPanel x:Name="StackPanelSorting" HorizontalAlignment="Left" Height="174" Margin="49,150,0,0" VerticalAlignment="Top" Width="315" Visibility="Hidden" Grid.Column="1">
                        <Button Content="Add an answer option" Height="33" Width="250"/>
                    </StackPanel>
                    <Label x:Name="LabelTestName" Content="Test name" HorizontalAlignment="Left" Height="29" Margin="24,17,0,0" VerticalAlignment="Top" Width="137" Grid.ColumnSpan="2"/>
                    <TextBox HorizontalAlignment="Left" Height="29" Margin="49,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="512" Grid.Column="1"/>

                </Grid>
            </TabItem>
            <TabItem Content="" Header="Tests" />
            <TabItem Header="Users and Groups" Height="22" Margin="-2,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="130" FontSize="14" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="381*"/>
                        <RowDefinition Height="169*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="417*"/>
                        <ColumnDefinition Width="737*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TextBoxAddGroup" HorizontalAlignment="Left" Margin="6,10,0,0" TextWrapping="Wrap" Text="Add New Group" VerticalAlignment="Top" Width="283" Height="30" MouseDoubleClick="TextBoxAddGroup_MouseDoubleClick" TextChanged="TextBoxAddGroup_TextChanged" Grid.Column="1" Grid.Row="1" />
                    <Button x:Name="ButtonAddGroup" Content="Add" HorizontalAlignment="Left" Margin="295,10,0,0" VerticalAlignment="Top" Height="30" Width="77" Click="ButtonAddGroup_Click" Grid.Column="1" Grid.Row="1"/>
                    <Label x:Name="LabelListGroups" Content="Groups" HorizontalAlignment="Left" VerticalAlignment="Top" Width="218" FontSize="14" FontStretch="Medium" FontWeight="Medium" Height="29" Margin="5,4,0,0" Grid.Column="1"/>
                    <ListBox x:Name="ListBox_Groups" Margin="5,38,0,10" HorizontalAlignment="Left" Width="367" SelectionChanged="ListBox_Groups_SelectionChanged" Grid.Column="1" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Name}" Grid.Column="1"></TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Label x:Name="Label_UsersOfGroup" Content="Users Of Groups" HorizontalAlignment="Left" VerticalAlignment="Top" Width="218" FontSize="14" FontStretch="Medium" FontWeight="Medium" Height="29" Margin="10,4,0,0" Grid.Column="2"/>
                    <ListBox x:Name="ListBox_UsersOfGroup" HorizontalContentAlignment="Stretch" Margin="10,38,154,10" Grid.Column="2" SelectionChanged="ListBox_UsersOfGroup_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <!--<TextBlock Text="{Binding Name}" Grid.Column="1"></TextBlock>-->
                                    <TextBox Margin="20,2,20,2" HorizontalAlignment="Stretch" Text="{Binding Name}" Grid.Column="1" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>


                    <ComboBox x:Name="ComboBox_Groups" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="238" Height="30" IsEnabled="False" Grid.Column="2" Grid.Row="1">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Name}" Grid.Column="1"/>
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button x:Name="Button_ChangeGroup" Grid.Column="2" Content="Add to Group" HorizontalAlignment="Left" Margin="253,10,0,0" VerticalAlignment="Top" Height="30" Width="89" IsEnabled="False" Click="Button_ChangeGroup_Click" Grid.Row="1"/>

                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
