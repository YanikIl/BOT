<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="ChatBot" Height="450" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="414" Margin="10,0,0,0" VerticalAlignment="Center" Width="760">
            <TabItem Header="Create Questions">
                <Grid Background="#FFE5E5E5" Margin="4,0,-4,0">
                    <Label Content="Choose the type of question" HorizontalAlignment="Left" Height="28" Margin="24,64,0,0" VerticalAlignment="Top" Width="160"/>
                    <Label Content="Write a question" HorizontalAlignment="Left" Height="29" Margin="24,22,0,0" VerticalAlignment="Top" Width="146"/>
                    <TextBox x:Name="TextBoxQuestion" HorizontalAlignment="Left" Height="29" Margin="203,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="512"/>
                    <ComboBox x:Name="ComboBoxQuestion" HorizontalAlignment="Left" Height="28" Margin="203,66,0,0" VerticalAlignment="Top" Width="315" IsSynchronizedWithCurrentItem="False" SelectionChanged="ComboBoxQuestion_SelectionChanged">
                        <TabItem Header="Yes/No"/>
                        <TabItem Header="Open question"/>
                        <TabItem Header="Choose one answer from several"/>
                        <TabItem Header="Select multiple answers from multiple "/>
                        <TabItem Header="Sorting"/>
                    </ComboBox>
                    <Button Content="Add a question to a test" HorizontalAlignment="Left" Height="28" Margin="559,66,0,0" VerticalAlignment="Top" Width="156"/>
                    <StackPanel x:Name="StackPanelYesNo" HorizontalAlignment="Left" Height="131" Margin="203,132,0,0" VerticalAlignment="Top" Width="315" Visibility="Hidden">
                        <RadioButton x:Name="RadioButtonYes" Content="Yes" Height="22" Width="142" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        <RadioButton x:Name="RadioButtonNo" Content="No" Height="21" Width="142"/>
                    </StackPanel>
                    <StackPanel x:Name="StackPanelWriteAQuestion" HorizontalAlignment="Left" Height="60" Margin="203,132,0,0" VerticalAlignment="Top" Width="360" Visibility="Hidden">
                        <TextBox Height="29" TextWrapping="Wrap" Width="361"/>
                    </StackPanel>
                    <StackPanel x:Name="StackPanelChooseOneAnswerFromSeveral" HorizontalAlignment="Left" Height="174" Margin="203,132,0,0" VerticalAlignment="Top" Width="315" Visibility="Hidden">
                        <Button x:Name="ButtonAddAnAswerOption" Content="Add an answer option" Height="29" Width="142"/>
                    </StackPanel>
                    <StackPanel x:Name="StackPanelSelectMultipleAnswersFromMultiple" HorizontalAlignment="Left" Height="170" Margin="203,136,0,0" VerticalAlignment="Top" Width="315" Visibility="Hidden">
                        <Button x:Name="ButtonAddAnAswerOptionForSorting" Content="Add an answer option" Height="29" Width="260"/>
                    </StackPanel>
                    <StackPanel x:Name="StackPanelSorting" HorizontalAlignment="Left" Height="174" Margin="203,132,0,0" VerticalAlignment="Top" Width="315" Visibility="Hidden">
                        <Button Content="Add an answer option" Height="33" Width="250"/>
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem/>
            <TabItem Height="22" Margin="-2,-2,-2,0" VerticalAlignment="Top"/>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
