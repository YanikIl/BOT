<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="ChatBot" Height="800" Width="1200">
    <Grid>
        <TabControl HorizontalAlignment="Center" Height="764" VerticalAlignment="Center" Width="1200">
            <TabItem Header="Create Questions">
                <Grid Background="#FFE5E5E5" Height="712">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="77*"/>
                        <ColumnDefinition Width="295*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Choose the type of question" HorizontalAlignment="Left" Height="28" Margin="24,107,0,0" VerticalAlignment="Top" Width="160" Grid.ColumnSpan="2"/>
                    <Label Content="Write a question" HorizontalAlignment="Left" Height="29" Margin="24,61,0,0" VerticalAlignment="Top" Width="146" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="TextBoxQuestion" HorizontalAlignment="Left" Height="29" Margin="49,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="512" Grid.Column="1"/>
                    <ComboBox x:Name="ComboBoxQuestion" HorizontalAlignment="Left" Height="28" Margin="49,106,0,0" VerticalAlignment="Top" Width="315" IsSynchronizedWithCurrentItem="False" SelectionChanged="ComboBoxQuestion_SelectionChanged" Grid.Column="1">
                        <TabItem Header="Yes/No"/>
                        <TabItem Header="Open question"/>
                        <TabItem Header="Choose one answer from several"/>
                        <TabItem Header="Select multiple answers from multiple "/>
                        <TabItem Header="Sorting"/>
                    </ComboBox>
                    <Button Content="Add a question to a test" HorizontalAlignment="Left" Height="28" Margin="405,106,0,0" VerticalAlignment="Top" Width="156" Grid.Column="1"/>
                    <StackPanel x:Name="StackPanelYesNo" HorizontalAlignment="Left" Height="131" Margin="49,150,0,0" VerticalAlignment="Top" Width="315" Visibility="Hidden" Grid.Column="1">
                        <RadioButton x:Name="RadioButtonYes" Content="Yes" Height="22" Width="142" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        <RadioButton x:Name="RadioButtonNo" Content="No" Height="21" Width="142"/>
                    </StackPanel>
                    <StackPanel x:Name="StackPanelWriteAQuestion" HorizontalAlignment="Left" Height="60" Margin="49,150,0,0" VerticalAlignment="Top" Width="360" Visibility="Hidden" Grid.Column="1">
                        <TextBox Height="29" TextWrapping="Wrap" Width="361"/>
                    </StackPanel>
                    <StackPanel x:Name="StackPanelChooseOneAnswerFromSeveral" HorizontalAlignment="Left" Height="174" Margin="49,150,0,0" VerticalAlignment="Top" Width="315" Visibility="Hidden" Grid.Column="1">
                        <Button x:Name="ButtonAddAnAswerOption" Content="Add an answer option" Height="29" Width="142"/>
                    </StackPanel>
                    <StackPanel x:Name="StackPanelSelectMultipleAnswersFromMultiple" HorizontalAlignment="Left" Height="170" Margin="49,150,0,0" VerticalAlignment="Top" Width="315" Visibility="Hidden" Grid.Column="1">
                        <Button x:Name="ButtonAddAnAswerOptionForSorting" Content="Add an answer option" Height="29" Width="260"/>
                    </StackPanel>
                    <StackPanel x:Name="StackPanelSorting" HorizontalAlignment="Left" Height="174" Margin="49,150,0,0" VerticalAlignment="Top" Width="315" Visibility="Hidden" Grid.Column="1">
                        <Button Content="Add an answer option" Height="33" Width="250"/>
                    </StackPanel>
                    <Label x:Name="LabelTestName" Content="Test name" HorizontalAlignment="Left" Height="29" Margin="24,17,0,0" VerticalAlignment="Top" Width="137" Grid.ColumnSpan="2"/>
                    <TextBox HorizontalAlignment="Left" Height="29" Margin="49,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="512" Grid.Column="1"/>

                </Grid>
            </TabItem>
            <TabItem Content="" Header="Tests" />
            <TabItem Header="Users and Groups" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="106*"/>
                        <RowDefinition Height="87*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="42*"/>
                        <ColumnDefinition Width="553*"/>
                        <ColumnDefinition Width="599*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TextBoxAddGroup" HorizontalAlignment="Left" Margin="10,334,0,0" TextWrapping="Wrap" Text="Add New Group" VerticalAlignment="Top" Width="324" Height="30" MouseDoubleClick="TextBoxAddGroup_MouseDoubleClick" TextChanged="TextBoxAddGroup_TextChanged" Grid.Column="2" />
                    <Button x:Name="ButtonAddGroup" Content="Add" HorizontalAlignment="Left" Margin="339,334,0,0" VerticalAlignment="Top" Height="30" Width="77" Click="ButtonAddGroup_Click" Grid.Column="2"/>
                    <Label x:Name="LabelListGroups" Content="Groups" HorizontalAlignment="Left" VerticalAlignment="Top" Width="218" FontSize="14" FontStretch="Medium" FontWeight="Medium" Height="29" Margin="10,6,0,0" Grid.Column="2"/>
                    <ListBox x:Name="ListBox_Groups" Margin="10,40,0,76" HorizontalAlignment="Left" Width="406" SelectionChanged="ListBox_Groups_SelectionChanged" Grid.Column="2" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Name}" Grid.Column="1"></TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Label x:Name="LabelList_UsersOfGroup" Content="Users Of Group&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="218" FontSize="14" FontStretch="Medium" FontWeight="Medium" Height="29" Margin="10,10,0,0" Grid.Column="2" Grid.Row="1"/>
                    <ListBox x:Name="ListBox_UsersOfGroup" Margin="10,39,182,28" Grid.Row="1" Grid.Column="2">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Name}" Grid.Column="1"></TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Label x:Name="LabelListGroups_Copy" Content="Users" HorizontalAlignment="Left" VerticalAlignment="Top" Width="218" FontSize="14" FontStretch="Medium" FontWeight="Medium" Height="30" Margin="10,10,0,0" Grid.ColumnSpan="2"/>
                    <ListBox x:Name="ListBox_Users" Margin="10,40,0,76" HorizontalAlignment="Left" Width="406" Grid.ColumnSpan="2" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Name}" Grid.Column="1"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <ComboBox x:Name="ComboBox_Groups" HorizontalAlignment="Left" Margin="10,371,0,0" VerticalAlignment="Top" Width="347" Height="30" Grid.ColumnSpan="2">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Name}" Grid.Column="1"/>
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button x:Name="Button_AddUserIntoGroup" Grid.Column="1" Content="Add" HorizontalAlignment="Left" Margin="320,371,0,0" VerticalAlignment="Top" Height="30" Width="54"/>
                    <TextBox x:Name="TextBox_ChangeUserName" HorizontalAlignment="Left" Margin="10,332,0,0" TextWrapping="Wrap" Text="New Name" VerticalAlignment="Top" Width="347" Grid.ColumnSpan="2" Height="32"/>
                    <Button x:Name="Button_ChangeUserName" Grid.Column="1" Content="Change" HorizontalAlignment="Left" Margin="320,332,0,0" VerticalAlignment="Top" Height="32" Width="54" AllowDrop="True"/>
                </Grid>
            </TabItem>


        </TabControl>

    </Grid>
</Window>
